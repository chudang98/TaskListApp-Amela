extends template

block content
  div.container
    div.row
      h1 Thêm một Task mới
    form(action='./addTask', method='POST')
      .form-group
        label(for='name_task') Nhập tên của task
        input#name_task.form-control(type='text', name='name', placeholder='Nhập tên của task')
      .form-group
        label(for='note_task') Nhập note cho task
        textarea#note_task.form-control(rows='3', name='note', placeholder="Nhập ghi chú cho task")
      button.btn.btn-primary(type='submit') Thêm

    if tasks.length == 0
      div.row
        h1 Danh sách các task trống !
    else
      -var dem = 0
      div.row
        h1 Danh sách các task
        table.table
          thead
            tr
              th(scope='col') Tên task
              th(scope='col') Ghi chú
              th(scope='col') Trạng thái
              th(scope='col') Xử lý
          tbody
            each task in tasks
              tr
                th(scope='row')= task.name
                td= task.note
                td= task.status
                td
                  button
                    a(href=`/detailTask/${dem++}`) Xem chi tiết


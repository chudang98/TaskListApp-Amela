extends template

block content
  div.container
    div.row
      h1 Thông tin của task
    form(action=`/detailTask/${index}`, method='POST')
      .form-group
        label(for='name_task') Tên task
        input#name_task.form-control(type='text', name='name', placeholder='Nhập tên của task', value=`${task.name}` )
      .form-group
        label(for='note_task') Note của task
        textarea#note_task.form-control(rows='3', name='note', placeholder="Nhập ghi chú cho task")=task.note
      .form-group
        select#sel1.form-control(name='status')
          if task.status == 1
            option(value=1, selected) open
          else
            option(value=1) open
          if task.status == 2
            option(value=2, selected) inprogress
          else
            option(value=2) inprogress
          if task.status == 3
            option(value=3, selected) done
          else
            option(value=3) done
      button.btn.btn-primary(type='submit') Update
      a.btn.btn-info.active(href='/', role='button', aria-pressed='true') Quay lại
      a.btn.btn-info.danger(href=`/deleteTask/${index}`, role='button', aria-pressed='true') Xóa task

      

